<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="450dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang hoạt động"
            android:textSize="12sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_toLeftOf="@+id/isActiveSwitch"/>
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/isActiveSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/isActiveSwitch"
            android:layout_marginTop="16dp"
            style="@style/DialogInput"
            android:id="@+id/NameInputLayout"
            android:hint="Tên cửa hàng">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Name"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/NameInputLayout"
            style="@style/DialogInput"
            android:id="@+id/AddressInputLayout"
            android:hint="Địa chỉ cửa hàng">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Address"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
