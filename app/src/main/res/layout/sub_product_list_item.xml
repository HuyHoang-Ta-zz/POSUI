<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">
    <TextView
        android:id="@+id/subProductQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        style="@style/Overline"/>
    <TextView
        android:id="@+id/subProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subProductQuantity"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="0dp"
        style="@style/Subtitle2"/>
    <TextView
        android:id="@+id/subProductRetailPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/placeholder_text"
        style="@style/Caption"/>
    <TextView
        android:id="@+id/subProductWholesalePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subProductRetailPrice"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Caption"/>
    <TextView
        android:id="@+id/subProductImportPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/subProductWholesalePrice"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Caption"/>
</android.support.constraint.ConstraintLayout>